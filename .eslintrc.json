{
    "plugins": [
        "prettier"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "node_modules/"
    ],
    "rules": {
        "no-console": "off",
        "prettier/prettier": [
            "error",
            {
                "useTabs": false,
                "endOfLine": "auto"
            }
        ],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never"
            }
        ]
    },
    "extends": [
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:prettier/recommended",
        "eslint:recommended"
    ]
}